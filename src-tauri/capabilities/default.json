{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-pdf",
      "allow": [
        {
          "path": "**/*.pdf",
          "read": true,
          "write": true
        }
      ]
    }
  ]
}