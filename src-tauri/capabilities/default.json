{
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:window:allow-set-title",
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "fs:default",
    {
      "identifier": "fs:allow-pdf",
      "allow": [
        {
          "path": "**/*.pdf",
          "read": true,
          "write": true
        }
      ]
    }
  ]
}